@model IEnumerable<mailServerManager.Models.MyMailServer>

@{
    ViewBag.Title = "Index";
}

<h2>Domains</h2>

<p>
    @Html.ActionLink("Create New Domain", "Create")
</p>
<table border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DomainName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DomainMaxAccountSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DomainMaxSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DomainName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DomainMaxAccountSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DomainMaxSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
