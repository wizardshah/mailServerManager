@model mailServerManager.Models.MyMail

@{
    ViewBag.Title = "Create";
}

<h2>Create New Email</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MyMail</legend>

        @Html.HiddenFor(model=> model.MyMailServerId)

        <div class="editor-label">
            @Html.LabelFor(model => model.EmailAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EmailAddress)
            @Html.Raw("@" + @ViewBag.DomainName)            
            @Html.ValidationMessageFor(model => model.EmailAddress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Active)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Active)
            @Html.ValidationMessageFor(model => model.Active)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxSize)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxSize)
            @Html.ValidationMessageFor(model => model.MaxSize)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Edit", "MailServerPanel", new { id = ViewBag.MyMailServerId }, null)
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
